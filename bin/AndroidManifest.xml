<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.wc.xiangmu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <!-- 向SD卡中写数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 从SD卡中读数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="cn.wc.xiangmu.app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/seemovies"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="cn.wc.xiangmu.activity.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.wc.xiangmu.activity.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity 
            android:name="cn.wc.xiangmu.activity.MovieInfoActivity"
            android:label="@string/app_name"></activity>
        <activity 
            android:name="cn.wc.xiangmu.activity.WebViewActivity"
            android:label="@string/app_name"></activity>
        <activity 
            android:name="cn.wc.xiangmu.activity.PlayListActivity"
            android:label="@string/app_name"></activity>
        <activity 
            android:name="cn.wc.xiangmu.activity.VidioPlayActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:label="@string/app_name"></activity>
    </application>

</manifest>